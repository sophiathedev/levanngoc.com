  /* Active state for regular menu items */
  .drawer-side .menu :where(li.active) > *:not(ul):not(details):not(.menu-title),
  .drawer-side .menu :where(li.active) > *:not(ul):not(details):not(.menu-title):hover {
    background-color: oklch(var(--p)) !important;
    color: oklch(var(--pc)) !important;
    font-weight: 600;
  }

  /* Active state for dropdown items */
  .drawer-side .menu details ul :where(li.active) > *:not(ul):not(details):not(.menu-title),
  .drawer-side .menu details ul :where(li.active) > *:not(ul):not(details):not(.menu-title):hover {
    background-color: oklch(var(--p)) !important;
    color: oklch(var(--pc)) !important;
    font-weight: 600;
  }

  /* Remove transitions to prevent flickering during navigation */
  .drawer-side .menu details,
  .drawer-side .menu details > ul {
    transition: none;
  }

  /* Disable animations during LiveView page loading */
  .phx-page-loading .drawer-side .menu details {
    animation: none !important;
  }
</style>
