<script>
  /**
   * Sidebar Active Link Management
   * - Highlights current page link
   * - Preserves dropdown states during navigation
   */
  (function() {
    'use strict';

    const STORAGE_KEY = 'sidebar_dropdown_states';
    const SELECTORS = {
      menu: '.drawer-side .menu',
      details: '.drawer-side .menu details',
      detailsOpen: '.drawer-side .menu details[open]',
      links: '.drawer-side .menu a',
      activeItems: '.drawer-side .menu li.active'
    };

    /**
     * Save currently open dropdowns to sessionStorage
     */
    function saveDropdownStates() {
      const openDropdowns = Array.from(document.querySelectorAll(SELECTORS.detailsOpen))
        .map(details => details.querySelector('summary')?.textContent.trim())
        .filter(Boolean);

      sessionStorage.setItem(STORAGE_KEY, JSON.stringify(openDropdowns));
    }

    /**
     * Restore previously open dropdowns from sessionStorage
     */
    function restoreDropdownStates() {
      try {
        const saved = sessionStorage.getItem(STORAGE_KEY);
        if (!saved) return;

        const openDropdowns = JSON.parse(saved);
        document.querySelectorAll(SELECTORS.details).forEach(details => {
          const summaryText = details.querySelector('summary')?.textContent.trim();
          if (summaryText && openDropdowns.includes(summaryText)) {
            details.setAttribute('open', '');
          }
        });
      } catch (e) {
        console.error('Failed to restore dropdown states:', e);
      }
    }

    /**
     * Update active class based on current path
     */
    function updateActiveLinks() {
      const currentPath = window.location.pathname;

      // Clear all active states
      document.querySelectorAll(SELECTORS.activeItems).forEach(item => {
        item.classList.remove('active');
      });

      // Set active state for current page
      document.querySelectorAll(SELECTORS.links).forEach(link => {
        if (link.getAttribute('href') === currentPath) {
          const parentLi = link.closest('li');
          const parentDetails = link.closest('details');

          if (parentLi) {
            parentLi.classList.add('active');
          }

          if (parentDetails) {
            parentDetails.setAttribute('open', '');
            saveDropdownStates();
          }
        }
      });
    }

    /**
     * Initialize sidebar state
     */
    function initialize() {
      restoreDropdownStates();
      updateActiveLinks();
    }

    // Event Listeners
    document.addEventListener('click', (e) => {
      if (e.target.closest(SELECTORS.links)) {
        saveDropdownStates();
      }
    });

    window.addEventListener('phx:page-loading-start', saveDropdownStates);
    window.addEventListener('phx:page-loading-stop', initialize);

    // Initial load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initialize);
    } else {
      initialize();
    }
  })();
</script>

