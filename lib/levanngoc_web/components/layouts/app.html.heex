<div class="drawer lg:drawer-open">
  <!-- Hidden element for PopupTracker hook -->
  <div id="popup-tracker" phx-hook="PopupTracker" style="display: none;"></div>

  <input id="app-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <!-- Navbar -->
    <header class="navbar bg-base-100 w-full border-b border-base-300">
      <div class="flex-none lg:hidden">
        <label for="app-drawer" class="btn btn-square btn-ghost">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block w-6 h-6 stroke-current"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            >
            </path>
          </svg>
        </label>
      </div>
      <div class="flex-1 px-4">
        <h1 class="text-xl font-bold">levanngoc.com</h1>
      </div>
      <div class="flex-none">
        <%= if @current_scope do %>
          <div class="dropdown dropdown-end">
            <div tabindex="0" role="button" class="btn btn-ghost">
              {@current_scope.user.email}
            </div>
            <ul
              tabindex="0"
              class="dropdown-content menu bg-base-100 rounded-box z-[1] w-64 p-2 shadow"
            >
              <% # Display current active billing plan or fall back to default billing_price
              current_plan =
                if @current_scope.user.current_billing do
                  @current_scope.user.current_billing.billing_price
                else
                  @current_scope.user.billing_price
                end %>
              <%= if current_plan do %>
                <li class="menu-title px-4 py-2">
                  <div class="flex flex-col gap-1">
                    <span class="text-xs text-base-content/60">Gói hiện tại</span>
                    <span class="text-sm font-semibold text-primary">
                      {current_plan.name} ({Number.Delimit.number_to_delimited(
                        @current_scope.user.token_amount,
                        precision: 0
                      )} tokens)
                    </span>
                  </div>
                </li>
                <hr class="my-1" />
              <% end %>
              <%= if Levanngoc.Accounts.User.superuser?(@current_scope.user) do %>
                <li>
                  <.link href={~p"/admin"}>Quản trị</.link>
                </li>
              <% end %>
              <li>
                <.link href={~p"/users/settings"}>Cài đặt</.link>
              </li>
              <li>
                <.link href={~p"/users/billing"}>Gói & Thanh toán</.link>
              </li>
              <hr class="my-1" />
              <li>
                <.link href={~p"/users/log-out"} method="delete">Đăng xuất</.link>
              </li>
            </ul>
          </div>
        <% else %>
          <.link href={~p"/users/register"} class="btn btn-primary btn-sm">
            Đăng ký
          </.link>
          <.link href={~p"/users/log-in"} class="btn btn-primary btn-sm">
            Đăng nhập
          </.link>
        <% end %>
      </div>
    </header>
    <!-- Page content -->
    <main class="flex-1 p-4 lg:p-6">
      {@inner_content}
    </main>

    <.flash_group flash={@flash} />
  </div>
  
<!-- Popup Modal -->
  <%= if assigns[:current_popup] do %>
    <div class="fixed inset-0 z-50 overflow-y-auto">
      <!-- Backdrop with blur -->
      <div
        class="fixed inset-0 bg-black/50 backdrop-blur-sm"
        phx-click="close_popup"
        phx-value-popup-id={@current_popup.id}
      >
      </div>
      
<!-- Modal Content -->
      <div class="flex min-h-full items-center justify-center p-[7.5vh]">
        <div class="relative bg-base-100 rounded-lg shadow-xl w-[85vw] h-[85vh] flex flex-col">
          <!-- Modal Header -->
          <div class="flex justify-between items-center p-4 border-b border-base-300 flex-shrink-0">
            <h3 class="text-lg font-bold">{@current_popup.title}</h3>
            <button
              type="button"
              phx-click="close_popup"
              phx-value-popup-id={@current_popup.id}
              class="btn btn-sm btn-ghost btn-circle"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"
                />
              </svg>
            </button>
          </div>
          
<!-- Iframe Content -->
          <div class="flex-1 overflow-hidden border-b border-base-300 rounded-b-lg">
            <iframe
              srcdoc={wrap_popup_content(@current_popup.content)}
              class="w-full h-full border-0"
              sandbox="allow-same-origin allow-popups"
              title={@current_popup.title}
            >
            </iframe>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="drawer-side">
    <label for="app-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
    <aside class="bg-base-200 min-h-full w-65">
      <div class="sticky top-0">
        <div class="p-5 border-base-300">
          <.link href="/" class="flex items-center gap-2 justify-center">
            <img src={~p"/images/logo.svg"} width="32" />
          </.link>
        </div>
        <ul class="menu w-full">
          <li>
            <.link href={~p"/"} class="flex items-center">
              <svg
